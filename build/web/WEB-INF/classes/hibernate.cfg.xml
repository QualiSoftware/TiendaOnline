<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/tiendaonline?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <mapping resource="Modelos/Productos.hbm.xml"/>
    <mapping resource="Modelos/Ofertas.hbm.xml"/>
    <mapping resource="Modelos/Direcciones.hbm.xml"/>
    <mapping resource="Modelos/Usuarios.hbm.xml"/>
    <mapping resource="Modelos/Pedidos.hbm.xml"/>
    <mapping resource="Modelos/Secciones.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
