<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <!-- Configuration for the default package. -->
    <package name="default" extends="struts-default">
        <action name="Login" class="Acciones.UsuariosController" method="Login">
            <result name="success" type="chain">
                <param name="actionName">primero</param>
                <param name="sesion.usuariologueado.usuNombre">${sesion.usuariologueado.usuNombre}</param>
            </result>
            <result name="input" type="chain">
                <param name="actionName">primero</param>
                <param name="mensajeError">mensajeError</param>
            </result>
            <result name="error" type="chain">
                <param name="actionName">primero</param>
                <param name="mensajeError">mensajeError</param>
            </result>          
        </action>
        <action name="primero" class="Acciones.ProductosController" method="prod_rel">
            <result name="success">/Vistas/index.jsp</result> 
        </action>
        <action name="cerrar_sesion" class="Acciones.UsuariosController" method="cerrar_sesion">
            <result name="success" type="redirect">primero</result>
        </action>
    </package>
</struts>