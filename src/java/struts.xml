        <action name="ajaxAction" class="Acciones.HomeRopa" method="ajaxAction">
            <result type="json">
                <param name="excludeNullProperties">true</param>
                <param name="noCache">true</param>
            </result>
        </action>
        <action name="irPaginaAdmin" class="Acciones.UsuariosValidaciones" method="AbroSesion">
            <result>/Vistas/paginaAdmin.jsp</result>
        </action>
        
        <!--Esto es para probar la página de Admin con un login. Se puede borrar-->
        <action name="LoginPrueba" class="Acciones.UsuariosValidaciones" method="LoginPrueba">
            <result name="input">/Vistas/pruebaLoginParaBorrar.jsp</result>
            <result name="error">/Vistas/pruebaLoginParaBorrar.jsp</result>
            <result>/Vistas/paginaAdmin.jsp</result>
        </action>
        <action name="CerrarSesion" class="Acciones.UsuariosValidaciones" method="CerrarSesion">
