<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <!-- Configuration for the default package. -->
    <package name="default" extends="struts-default">
        <action name="CategoriaFiltro" class="Acciones.HomeCategorias" method="CategoriaFiltro" >
            <result>/Vistas/pruebaCRUDprincipal.jsp</result> 
        </action>
        <action name="CategoriasForm" class="Acciones.HomeCategorias" method="CategoriasForm">
            <result>/Vistas/pruebaCRUDformulario.jsp</result>
            
        </action>
        <action name="CrudAction" class="Acciones.HomeCategorias" method="CrudAction">
            <result name="input">/Vistas/pruebaCRUDformulario.jsp</result>
            <result name="error">/Vistas/pruebaCRUDformulario.jsp</result>
            <result type="chain">CategoriaFiltro</result> 
        </action>
        <action name="volver">
            <result type="redirect">CategoriaFiltro</result>
        </action>
    </package>
</struts>