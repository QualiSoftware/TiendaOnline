<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/tienda_ropa?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>
    <mapping resource="Modelos/Fotos.hbm.xml"/>
    <mapping resource="Modelos/Categoria.hbm.xml"/>
    <mapping resource="Modelos/RopaCategoria.hbm.xml"/>
    <mapping resource="Modelos/Marcas.hbm.xml"/>
    <mapping resource="Modelos/Color.hbm.xml"/>
    <mapping resource="Modelos/Look.hbm.xml"/>
    <mapping resource="Modelos/Ropa.hbm.xml"/>
    <mapping resource="Modelos/Material.hbm.xml"/>
    <mapping resource="Modelos/Tallas.hbm.xml"/>
    <mapping resource="Modelos/RopaMaterial.hbm.xml"/>
    <mapping resource="Modelos/Coleccion.hbm.xml"/>
    <mapping resource="Modelos/Clientela.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
